  <script type="text/javascript">
    console.log('begin sysmail javascript')
      if (isWeb()) {
        showWebPage()
        showBtn()
      } else if(isApp()) {
      } else {
        if(screen.width > 700) {
          showWebPage()
        }
      }

    function isWeb() {
      var isWebmail = window.getTop && window.getTop() && typeof window.getTop().getUserInfo === 'function'
      var isXmail = window.isXmail
      return isWebmail || isXmail
    }

  //   // 当需要在mailapp上跳转路径的时候需要使用到isApp的判断
    function isApp() {
      return /mailapp|QQMail/i.test(navigator.userAgent)
    }

    function showWebPage() {
      try {
        removeClass(document.getElementById('web_eml'), 'is-hidden')
        addClass(document.getElementById('app_eml'), 'is-hidden')
      } catch (error) {
        console.log(error)
      }
    }

    function addClass(element, name) {
      var baseClass = element.getAttribute('class')
      if (baseClass.indexOf(name) === -1) {
        var newClass = baseClass + ' ' + name
        element.setAttribute('class', newClass)
      }
    }

    function removeClass(element, name) {
      var baseClass = element.getAttribute('class')
      if (baseClass.indexOf(name) !== -1) {
        var newClass = baseClass
          .split(name)
          .join(' ')
          .replace(/\s+/g, ' ')
        element.setAttribute('class', newClass)
      }
    }
  //   // 展示按钮
    function showBtn() {
      removeClass(document.getElementById('web-jump-resume'), 'is-hidden')
      addJumpEventToWebMail()
    }
    // 兼容ie浏览器
    function addJumpEventToWebMail() {
      var jumpDiv = document.getElementById("web-jump-resume")
      if (jumpDiv.attachEvent) {
        jumpDiv.attachEvent('onclick', toResume)
      } else {
        jumpDiv.onclick = toResume
      }
    }

    function toResume() {
      if(window.isXmail) {
        window.location.href = 'https://wx.mail.qq.com/home/index?sid=' + getQueryVariable('sid') + '#/resume'
        return
      }
      // var sid = window.getTop().GetSid()
      // var cookie_sid = window.getTop().encodeURIComponent(getTop().getCookie('sid'))
      // window.location.href = 'https://wx.mail.qq.com/resume/login?enc=3&sid=' + sid + '&cookie_sid=' + cookie_sid
      // window.getTop().switchFolder('folder_resume')
      if(getTop && getTop().jumpToResume) {
        getTop().jumpToResume()
      }
    }
    function getQueryVariable(variable) {
      var query = window.location.search.substring(1)
      var vars = query.split("&")
      for (var i=0;i<vars.length;i++) {
          var pair = vars[i].split("=")
          if(pair[0] == variable){return pair[1]}
      }
      return(false)
    }
  </script>
