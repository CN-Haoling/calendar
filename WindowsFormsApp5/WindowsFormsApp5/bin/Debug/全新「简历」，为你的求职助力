    try {
      getTop().waitFor(function () {
          return getTop().readmailSpread;
        },
        function (_abOK) {
          if (_abOK) {
            getTop().readmailSpread(window, "", {
              isNname: true
            });
          }
        }
      );
    } catch (e) {}
  </script>
